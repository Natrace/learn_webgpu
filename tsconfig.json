{
  "compilerOptions": {
    "module": "ESNext",          // 生成 ESM 模块
    "moduleResolution": "node",  // 按照 Node.js 解析模块
    "target": "ES6",             // 输出 ES6+ 代码
    "strict": true,              // 启用严格模式
    "esModuleInterop": true,     // 允许 default import 语法
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ESNEXT"],
    "types": [ "@webgpu/types", "vite/client"],
    
    "outDir": "./dist",
    "rootDir": ".",
  },
  "include": ["core/**/*", "main.ts"],
  "exclude": ["node_modules"]
}
