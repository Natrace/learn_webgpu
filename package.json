{
  "devDependencies": {
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "webgpu": "^0.2.11"
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "webgpu"
    ]
  },
  "include": [
    "core/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "type": "module"
}
